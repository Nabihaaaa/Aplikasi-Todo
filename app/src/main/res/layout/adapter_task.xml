<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#404040"
        >
        <ImageView
            android:id="@+id/bt_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_not_complite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Algoritma"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/bt_0"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            tools:text="11/12/2022"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/bt_0"
            app:layout_constraintTop_toBottomOf="@id/text_item"
            tools:ignore="SmallSp"
            app:drawableStartCompat="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/clock_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            tools:text="10:00"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/date_item"
            app:layout_constraintTop_toBottomOf="@id/text_item"
            tools:ignore="SmallSp"
            app:drawableStartCompat="@drawable/ic_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>